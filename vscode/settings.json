{
		"security.allowedUNCHosts": [
			"wsl$"
		],
    "editor.fontSize": 16,
    "workbench.startupEditor": "none",
    "terminal.integrated.fontSize": 16,
    "editor.minimap.enabled": false,
    "vim.vimrc.path": "$HOME/.vimrc",
    "vim.smartRelativeLine": true,
    "editor.tabSize": 2,
    "editor.cursorBlinking": "solid",
    "vim.highlightedyank.textColor": "#f47e2c",
    "vim.highlightedyank.enable": true,
    "vim.history": 100,
    "vim.highlightedyank.duration": 220,
		"window.newWindowDimensions": "maximized",
    "workbench.colorCustomizations": {
			"editor.background": "#1E1E1E",  // or any color code you want
			"sideBar.background": "#1E1E1E",  // or any color code you want
			"terminal.background": "#1E1E1E",
			"editorHoverWidget.background": "#313134"
},
"vim.normalModeKeyBindingsNonRecursive": [    {
    "before": ["u"],
    "commands": ["undo"],
		"silent": true
  },
  {
    "before": ["C-r"],
    "commands": ["redo"],
		"silent": true
  },
  {
    "before": ["<leader>", "f"],
    "commands": ["workbench.action.quickOpen"],
		"silent": true
  },
	{
    "before": ["<leader>", "r", "n"],
    "commands": ["editor.action.rename"],
		"when": "editorHasRenameProvider && editorTextFocus && !editorReadonly",
		"silent": true
  },
	{
		"before": ["<leader>", "s"],
		"after": ["<leader>", "<leader>", "s"]
	},
	{
		"before": ["<leader>", "w"],
		"after": ["<leader>", "<leader>", "w"]
	},
	{
		"before": ["<leader>", "j"],
		"after": ["<leader>", "<leader>", "j"]
	},
	{
		"before": ["'"],
		"after": ["`"]
	},
	{
		"before": ["<Esc>"],
		"commands": [":nohl"],
		"silent": true
  }
],
"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": [
					"p"
			],
			"after": [
					"p",
					"g",
					"v",
					"y"
			]
	}
],
"editor.occurrencesHighlight": "off",
"terminal.integrated.copyOnSelection": true,
"editor.renderWhitespace": "boundary",
"editor.detectIndentation": false,
"editor.insertSpaces": false,
"cmake.showOptionsMovedNotification": false,
"workbench.colorTheme": "One Dark Pro",
"vim.useSystemClipboard": true,
"window.title": "${rootName}${separator}${activeEditorShort}",
"window.commandCenter": false,
"workbench.layoutControl.enabled": false,
"vim.easymotion": true,
"vim.leader": "<space>",
"terminal.integrated.hideOnStartup": "always",
"terminal.integrated.profiles.osx": {
	"zsh": {
		"path": "env",
		"args": [
			"-u",
			"TMUX",
			"-u",
			"FZF_CTRL_R_OPTS",
			"/bin/zsh",
			"-l"
		]
	}
},
"terminal.integrated.profiles.linux": {
	"zsh": {
		"path": "env",
		"args": [
			"-u",
			"TMUX",
			"-u",
			"FZF_CTRL_R_OPTS",
			"/bin/zsh",
			"-l"
		]
	}
},
"terminal.integrated.defaultProfile.osx": "zsh",
"terminal.integrated.defaultProfile.linux": "zsh",
"editor.lineNumbers": "relative",
"editor.cursorSurroundingLines": 8,
"explorer.confirmDragAndDrop": false,
"editor.cursorSmoothCaretAnimation": "on",
"vim.hlsearch": true
}